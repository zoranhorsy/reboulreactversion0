# URL de l'API en production (sans slash à la fin)
NEXT_PUBLIC_API_URL=https://reboul-store-api-production.up.railway.app

# Configuration du serveur
NODE_ENV=production
PORT=3000

# URL du site en production
SITE_URL=https://reboul-store.vercel.app

# Email administrateur
ADMIN_EMAIL=your-email@example.com

# Configuration SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# JWT Configuration
JWT_SECRET=your-jwt-secret

# Base de données
DATABASE_URL=your-database-url

# Stripe Configuration (optionnel)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Upload Configuration
UPLOAD_DIR=/tmp/uploads

# Cloudinary Configuration (optionnel)
CLOUDINARY_URL=your-cloudinary-url 