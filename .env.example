# URL de l'API en production (sans slash à la fin)
NEXT_PUBLIC_API_URL=your_api_url_here

# Configuration du serveur
NODE_ENV=production
PORT=3000

# URL du site en production
SITE_URL=https://reboul-store.vercel.app

# Email administrateur
ADMIN_EMAIL=your-email@example.com

# Configuration SMTP
SMTP_HOST=your_smtp_host
SMTP_PORT=your_smtp_port
SMTP_SECURE=your_smtp_secure
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# JWT Configuration
JWT_SECRET=your-jwt-secret

# Base de données
DATABASE_URL=your-database-url

# Stripe Configuration (optionnel)
# Upload Configuration
UPLOAD_DIR=/tmp/uploads

# Cloudinary Configuration (optionnel)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UPLOUD_PRESET=your_cloudinary_upload_preset 